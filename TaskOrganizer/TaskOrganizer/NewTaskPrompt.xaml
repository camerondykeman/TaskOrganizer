<Window x:Class="TaskOrganizer.NewTaskPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewTaskPrompt" Height="169" Width="240" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Give your task a Name" Height="28" HorizontalAlignment="Left" Margin="44,21,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="44,55,0,0" Name="textBox1" VerticalAlignment="Top" Width="129" ForceCursor="False" />
        <Button Content="OK" Height="23" HorizontalAlignment="Left" Margin="32,95,0,0" Name="buttonOK" VerticalAlignment="Top" Width="75" Click="buttonOK_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="113,95,0,0" Name="buttonCancel" VerticalAlignment="Top" Width="75" Click="buttonCancel_Click" />
    </Grid>
</Window>
